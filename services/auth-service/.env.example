# Environment Configuration Example for Auth Service

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://ofair_user:password@localhost/ofair_db

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# S3/MinIO (Optional)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=ofair-storage
S3_REGION=us-east-1

# Stripe (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Email SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# GreenAPI WhatsApp Configuration
GREENAPI_ID_INSTANCE=your_instance_id
GREENAPI_API_TOKEN=your_api_token

# Platform Settings
PLATFORM_COMMISSION_CONSUMER=10
PLATFORM_COMMISSION_PROFESSIONAL=5
DEFAULT_HOLD_PERIOD_DAYS=7
MINIMUM_JOB_AMOUNT=100
SUBSCRIPTION_MONTHLY_PRICE=100

# Hebrew/RTL Settings
DEFAULT_LANGUAGE=he
DEFAULT_TIMEZONE=Asia/Jerusalem
DEFAULT_CURRENCY=ILS

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://app.ofair.co.il