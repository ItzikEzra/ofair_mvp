# OFAIR MVP Production Environment Configuration
# Copy this to .env and update with your production values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=ofair_prod
POSTGRES_USER=ofair_user

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# MinIO/S3 Configuration
MINIO_ROOT_USER=ofair_minio
MINIO_ROOT_PASSWORD=your_secure_minio_password_here

# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_change_in_production

# 019 SMS Configuration (Israeli SMS Provider)
SMS019_USERNAME=infoofair
SMS019_PASSWORD=Ofair@770
SMS019_SENDER_NUMBER=0505577565

# Payment Provider Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Twilio Configuration (Optional - for additional notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Domain Configuration
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com

# SSL Certificate Paths (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Environment
ENVIRONMENT=production
DEBUG=false

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO